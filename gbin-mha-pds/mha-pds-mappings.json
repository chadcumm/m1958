  "eoc_status": [
    {
      "code": "Planned",
      "definition": "The episode of care has a 'Referral date' (and possibly 'First contact date' or 'Initial assessment date' if available) but no 'Eligibility decision date.' The client's service is being planned.",
      "available_for_submission": true,
      "mapping_notes": "The number of individuals waiting for service from a specific functional centre. These individuals are eligible for service but have not yet had their first service and thus are still waiting for service.",
      "query_logic": "Query clinical_event WHERE event_cd = 537654177 (MHA Outcome of Referral) AND (result_val IS NULL OR result_val NOT IN ('Accepted*', 'Declined*')). Referral form exists but triage not completed.",
      "reference_script": "bhs_mh_referrals.prg, bhs_mh_init_asses_wl.prg"
    },
    {
      "code": "Waitlist",
      "definition": "The episode of care has an 'Eligibility decision date'. The client was deemed eligible for service, but the provider does not currently have capacity to directly enroll the client into service.",
      "available_for_submission": true,
      "mapping_notes": "Current reporting=The number of individuals referred to the organization and currently waiting for screening to determine service eligibility.",
      "query_logic": "Query WHERE event_cd = 537654177 AND result_val = 'Accepted*' AND triage completed AND (NO scheduled appointment OR appointment not attended). Check sch_appt with appt_type_cd IN (539586899, 539586957, 539593715).",
      "reference_script": "bhs_mh_srv_init_wl.prg"
    },
    {
      "code": "Cancelled",
      "definition": "The episode of care was cancelled, or withdrawn from service, often selected during the planned stage as the patient may have gone elsewhere.",
      "available_for_submission": true,
      "mapping_notes": "Clients that have a referral but documentation would indicate the reason visit would be canceled.",
      "query_logic": "Query WHERE (event_cd = 537654177 AND result_val = 'Declined*') OR (encounter.disch_dt_tm IS NOT NULL AND NOT EXISTS attended appointment).",
      "reference_script": "bhs_mh_referrals.prg, bhs_mh_srv_init_wl.prg"
    },
    {
      "code": "Active",
      "definition": "The client has been removed from the waitlist and is enrolled in the service, or the client has initiated service. The episode of care has either a 'Service enrollment date' or 'Service initiation date.'",
      "available_for_submission": true,
      "mapping_notes": "Active encounters associated to an appropriate functional center. CRITICAL: Must have workload entries.",
      "query_logic": "Query WHERE result_val = 'Accepted*' AND encounter.disch_dt_tm IS NULL AND sch_appt.sch_state_cd = 3580 (Checked-in) AND EXISTS workload entries with wl_code IN ('3267', '3266').",
      "reference_script": "bhs_mh_first_srv.prg, bhs_mh_srv_provision.prg, gbin_mha_pds_utils.prg"
    },
    {
      "code": "Finished",
      "definition": "This episode of care is finished and the organization is not expecting to be providing further care to the patient. Can also be known as 'closed', 'completed' or 'discharged.'",
      "available_for_submission": true,
      "mapping_notes": "Clients are discharged from a service delivery functional centre when the need for that service has ended or as per discharge criteria.",
      "query_logic": "Query WHERE encounter.disch_dt_tm IS NOT NULL AND encounter.disch_dt_tm < SYSDATE AND EXISTS discharge event (event_cd = 537631773) AND clinicians_involved = 'No'.",
      "reference_script": "bhs_mh_service_dsch.prg, gbin_mha_pds_utils.prg"
    },
    {
      "code": "Entered in Error",
      "definition": "This instance should not have been part of this patient's medical record.",
      "available_for_submission": false,
      "mapping_notes": "Canceled encounter or error status. Standard Cerner error handling.",
      "query_logic": "Query WHERE encounter.active_ind = 0 OR result_status_cd NOT IN AUTH/MODIFIED codes.",
      "reference_script": "Standard Cerner error handling"
    }
  ],
